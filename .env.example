# Database
DATABASE_URL="postgresql://user:password@localhost:5432/branchhq?schema=public"

# Admin credentials
ADMIN_USER="admin"
ADMIN_PASS="changeme"

# Base URL for generating share links
BASE_URL="https://your-domain.com"

# Environment
NODE_ENV="development"

# V2: Phone Rotation
# Secret for generating stable shuffle seeds (use a long random string)
ROTATION_SEED_SECRET="change-me-to-a-long-random-secret"

# Salt for fingerprint hashing (defaults to ROTATION_SEED_SECRET if not set)
STICKY_FINGERPRINT_SALT="change-me-to-another-random-secret"

# Secret key to allow phone override via query param (for admin testing)
# Leave empty to disable phone override completely
PHONE_OVERRIDE_KEY=""

# Set to "false" to disable click event logging (for high-traffic campaigns)
ENABLE_CLICK_EVENTS="true"
